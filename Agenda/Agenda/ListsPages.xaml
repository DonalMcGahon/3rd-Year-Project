<Page
    x:Class="Agenda.ListsPages"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Agenda"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <!-- Pivot -->
    <Pivot x:Name ="pvtAgenda"  Title="Agenda">
        <!-- Pivot for TO-DO List List -->
        <PivotItem Header="TO-DO List">
            <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
                <TextBlock x:Name="textBlock" HorizontalAlignment="Left" TextWrapping="Wrap" Text="This is page two." VerticalAlignment="Top" Margin="86,222,0,0" Width="180" Height="77" FontSize="24"/>
                <Button x:Name="button" Content="Go to page one" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="86,304,0,0" Width="180" Click="button_Click"/>

            </Grid>
        </PivotItem>
        
        <!-- Pivot for Shopping List -->
        <PivotItem x:Name ="pvtShopping" Header="Shopping-List">
            <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
            </Grid>
        </PivotItem>
    </Pivot>
</Page>
